# Environment Variables for Digital Banking Application
# Copy this file to .env and modify values as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=my-secret-pw
MYSQL_DATABASE=digital_banking_db
MYSQL_USER=banking_user
MYSQL_PASSWORD=banking_pass

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:mysql://mysql-db:3306/digital_banking_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=my-secret-pw

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-256-bits-long-change-this-in-production
JWT_EXPIRATION=86400000

# Redis Configuration
REDIS_PASSWORD=redis_password

# Application Environment
ENVIRONMENT=development
DEBUG_MODE=true

# Optional: External API Keys
# EXTERNAL_API_KEY=your-external-api-key
# THIRD_PARTY_SERVICE_URL=https://api.example.com
